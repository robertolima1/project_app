<InstantContent>
  orientation: "horizontal"
  spacing: "5dp"
  size_hint_y: None
  height: "80dp"

  MDTextField:
    id:input_hora
    hint_text: "Horas"
    required: True          
    helper_text_mode:"on_error"
    input_type: 'number'
    max_text_length: 2
    input_filter: "int"         
  MDLabel:
    text: ":"
    halign: "center"
    font_style: "H6"
    bold: True
  MDTextField:
    id:input_minuto
    hint_text: "Minutos"
    required: True          
    helper_text_mode:"on_error"
    max_text_length: 2
    input_type: 'number'
    input_filter: "int"         
  MDLabel:
    id:instant_error
    text: ""
    halign: "center"
    font_style: "Body2"
    theme_text_color: "Custom"    
    text_color: "red"