<ScreenAnotacaoDescricao>:
  name: "anotacao-descricao"
  md_bg_color: "#67AB9F"
  MDFloatLayout:    
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      pos_hint: {"center_x": 0.5, "center_y": 0.96}
      MDFloatLayout:        
        MDLabel:
          id: title
          text:"Anotação Descricao"
          halign: "center"
          font_style: "Body2"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        MDIconButton:
          icon: "arrow-left"
          pos_hint: {"center_x": 0.02, "center_y": .5}
          on_release: 
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(3) 
      pos_hint: {"center_x": 0.5, "center_y": 0.91}
    MDTextField:  
      id: input_anotacao_id
      opacity: 0
      disabled: True      
    MDTextField:        
      id: input_title       
      hint_text: 'Digite o título da anotação'                     
      required: True      
      pos_hint: {"center_x": 0.5, "center_y": 0.8}  
      size_hint: 0.97, None
      mode: "fill"
      height: "30dp"
      required: True    
      helper_text_mode:"on_error"
      max_text_length: 30      

    MDTextField:        
      id: input_describe
      pos_hint: {"center_x": 0.5, "center_y": 0.6}
      multiline: True
      hint_text: 'Digite a descrição da anotação'      
      size_hint: 0.97, None
      mode: "fill"
      height: "30dp"
      required: True    
      helper_text_mode:"on_error"
      max_text_length: 200      

    MDTextField:        
      id: input_data       
      hint_text: "DD/MM/YYYY"            
      size_hint: 0.97, None
      height: "30dp"     
      disabled: 'True'
      required: True      
      pos_hint: {"center_x": 0.5, "center_y": 0.4}  
      size_hint: 0.97, None
      mode: "fill"        
      helper_text_mode:"on_error"      

    MDRoundFlatIconButton:
      id: button_save
      icon: "check"
      text: "Salvar"
      pos_hint: {"center_x": 0.2, "center_y": 0.3}
      on_release:
        app.save_anotacao()

    MDRoundFlatIconButton:
      icon: "close"
      text: "Cancelar"
      on_release:
        root.manager.transition.direction = "right"
        root.manager.current = "main"
      pos_hint: {"center_x": 0.8, "center_y": 0.3}
    MDIconButton:    
      icon: "calendar-account-outline"
      icon_size: "50sp"
      on_release: 
        app.show_date_picker()        
      pos_hint: {"center_x": 0.9, "center_y": 0.1}
      icon_color: "white"
      line_color: "white"    