<ScreenLembreteView>:
  name: "screen_lembrete"
  md_bg_color: "#67AB9F"
  FloatLayout:    
    Image:
      source: 'images/flower_background.png'
      size_hint: (None, None)
      size: "200dp", "200dp"
      pos_hint: {"center_x": 0.5, "center_y": 0.5}

    ScrollView:
      pos_hint: {"center_x": 0.5, "center_y": 0.5}
      MDList:
        id: list_lembrete      
    MDIconButton:
      icon: "plus"     
      theme_icon_color: "Custom"
      icon_color: "white"
      md_bg_color: "#FF7AA8"
      pos_hint: {"center_x": 0.9, "center_y": 0.1}
      on_release: app.setLembreteDescribe()