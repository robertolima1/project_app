<ScreenLembreteDescricao>:
  name: "lembrete-descricao"
  md_bg_color: "#67AB9F"
  MDFloatLayout:
    
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      pos_hint: {"center_x": 0.5, "center_y": 0.96}
      MDFloatLayout:        
        MDLabel:
          id: title
          text:"Lembrete Descricao"
          halign: "center"
          font_style: "Body2"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        MDIconButton:
          icon: "arrow-left"
          pos_hint: {"center_x": 0.02, "center_y": .5}
          on_release: 
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(3) 
      pos_hint: {"center_x": 0.5, "center_y": 0.91}
    MDIconButton:    
      icon: "timer"
      icon_size: "50sp"
      on_release: app.show_time_picker()
      pos_hint: {"center_x": 0.9, "center_y": 0.1}
      icon_color: "white"
      line_color: "white"


    MDTextField:
      id: input_lembrete_title        
      pos_hint: {"center_x": 0.5, "center_y": 0.8}
      hint_text: 'Digite o título do lembrete'
      required: True      
      helper_text_mode:"on_error"
      mode: 'round'

    MDTextField:        
      id: input_lembrete_describe
      pos_hint: {"center_x": 0.5, "center_y": 0.7}
      multiline: True
      hint_text: 'Digite a descrição do lembrete'      
      mode: 'round'

    MDTextField:        
      id: input_lembrete_number_repeat
      pos_hint: {"center_x": 0.5, "center_y": 0.6}
      hint_text: 'Digite o numero de repetições'
      size_hint: 1, None 
      height: "30dp"   
      required: True      
      helper_text_mode:"on_error"
      input_type: 'number'
      input_filter: "int"
      mode: 'round'
    MDTextField:        
      id: input_lembrete_instance       
      hint_text: "00:00 [HH:MM]"            
      size_hint: 1, None 
      height: "30dp"     
      disabled: 'True'
      required: True      
      pos_hint: {"center_x": 0.5, "center_y": 0.5}  
      mode: 'round'
