<ScreenLembreteDescricao>:
  name: "lembrete-descricao"
  md_bg_color: "#67AB9F"
  MDFloatLayout:
    
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      pos_hint: {"center_x": 0.5, "center_y": 0.96}
      MDFloatLayout:        
        MDLabel:
          id: title
          text:"Lembrete Descricao"
          halign: "center"
          font_style: "Body2"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        MDIconButton:
          icon: "arrow-left"
          pos_hint: {"center_x": 0.02, "center_y": .5}
          on_release: 
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(3) 
      pos_hint: {"center_x": 0.5, "center_y": 0.91}
    MDIconButton:    
      icon: "timer"
      icon_size: "50sp"
      on_release: app.show_time_picker()
      pos_hint: {"center_x": 0.9, "center_y": 0.1}
      icon_color: "white"
      line_color: "white"
    MDIconButton:    
      icon: "images/start_icon.png"
      
      on_release: 
        app.start_clock()
        root.manager.transition.direction = "right"
        root.manager.current = "main"
      pos_hint: {"center_x": 0.6, "center_y": 0.5}
      icon_color: "white"
      line_color: "white"

    MDIconButton:    
      icon: "images/stop_icon.png"      
      on_release: app.stop_clock()
      pos_hint: {"center_x": 0.4, "center_y": 0.5}
      icon_color: "white"
      line_color: "white"
