<ScreenLembreteDescricao>:
  name: "lembrete-descricao"
  md_bg_color: "#67AB9F"
  MDFloatLayout:    
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      pos_hint: {"center_x": 0.5, "center_y": 0.96}
      MDFloatLayout:        
        MDLabel:
          id: title
          text:"Lembrete Descricao"
          halign: "center"
          font_style: "H6"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        MDIconButton:
          icon: "images/arrow.png"          
          pos_hint: {"center_x": 0.06, "center_y": .5}
          on_release: 
            root.manager.transition.direction = "right"
            root.manager.current = "main"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(2) 
      pos_hint: {"center_x": 0.5, "center_y": 0.91}
    MDIconButton:    
      icon: "timer"
      icon_size: "50sp"
      on_release: app.show_confirmation_dialog()
      pos_hint: {"center_x": 0.9, "center_y": 0.1}
      icon_color: "white"
      line_color: "white"

    MDTextField:
      id: input_lembrete_id
      opacity: 0
      disabled: True      
    MDTextField:
      id: input_lembrete_title        
      pos_hint: {"center_x": 0.5, "center_y": 0.8}
      hint_text: 'Digite o título do lembrete'
      required: True      
      size_hint: 0.97, None
      mode: "fill"
      height: "30dp"
      helper_text_mode:"on_error"
      max_text_length: 30      
      # mode: 'round'

    MDTextField:        
      id: input_lembrete_describe
      pos_hint: {"center_x": 0.5, "center_y": 0.65}
      multiline: True
      hint_text: 'Digite a descrição do lembrete'      
      size_hint: 0.97, None
      mode: "fill"
      height: "30dp"
      required: True    
      helper_text_mode:"on_error"
      max_text_length: 200      

    MDTextField:        
      id: input_lembrete_number_repeat
      pos_hint: {"center_x": 0.5, "center_y": 0.5}
      hint_text: 'Digite o numero de repetições'
      size_hint: 0.97, None
      height: "30dp"   
      required: True      
      helper_text_mode:"on_error"
      input_type: 'number'
      input_filter: "int"      
      mode: "fill"
      height: "30dp"
      helper_text_mode:"on_error"
      max_text_length: 1
      helper_text: "Até 6 repetições"
    MDTextField:        
      id: input_lembrete_instance       
      hint_text: "Hora:Minuto"            
      size_hint: 0.97, None
      height: "30dp"     
      disabled: 'True'
      required: True      
      pos_hint: {"center_x": 0.5, "center_y": 0.35}  
      mode: "fill"
      height: "30dp"

    MDRectangleFlatButton:
      id: button_save
      icon: "check"
      text: "Salvar"
      pos_hint: {"center_x": 0.2, "center_y": 0.2}
      font_style:"Button" 
      theme_text_color: "Custom"
      md_bg_color:"#FF7AA8"
      text_color: "white"
      on_release:
        app.save_lembrete()


    MDRectangleFlatButton:
      icon: "close"
      text: "Cancelar"
      font_style:"Button"
      theme_text_color: "Custom"
      md_bg_color:"#FF7AA8"
      text_color: "white"
      on_release:
        root.manager.transition.direction = "right"
        root.manager.current = "main"
      pos_hint: {"center_x": 0.8, "center_y": 0.2}