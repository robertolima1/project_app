    MDRoundFlatIconButton:
      icon: "check"
      text: "Salvar"
      pos_hint: {"center_x": 0.2, "center_y": 0.3}
      on_release:
        app.save_lembrete()
        root.manager.transition.direction = "right"
        root.manager.current = "main"

    MDRoundFlatIconButton:
      icon: "close"
      text: "Cancelar"
      on_release:
        root.manager.transition.direction = "right"
        root.manager.current = "main"
      pos_hint: {"center_x": 0.8, "center_y": 0.3}