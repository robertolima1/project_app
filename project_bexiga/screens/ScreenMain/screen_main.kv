<ScreenMainView>
  name: "main"
  MDBoxLayout:
    orientation: "vertical"
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      MDFloatLayout:        
            
        MDLabel:
          id: title
          text:"Home"
          halign: "center"
          font_style: "H6"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        # MDCard:
        #   id: container_bexiga
        #   pos_hint: {"center_x": 0.75, "center_y": 0.5}    
        #   size_hint: None, 1
        #   size: "60dp", "50dp"     
        #   radius: 0,0,0,0
        #   md_bg_color:"#67AB9F"           
        #   BoxLayout:          
        #     orientation: "horizontal"
        #     spacing: "1dp"
        #     MDIconButton:
        #       icon: 'images/bexiga_lembrete.png'          
        #       icon_size: "20sp"
        MDLabel:
          id: count
          text:"[0] 00:00:00"
          halign: "right"
          font_style: "Body2"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"

        # MDIconButton:
        #   icon: "language-python"
        #   pos_hint: {"center_x": 0.98, "center_y": .5}
        #   on_release: 
        #     root.manager.transition.direction = "down"
        #     root.manager.current = "alerta"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(2) 

    MDBottomNavigation:
      id: bottom_navigation
      panel_color:"#67AB9F"    
      
      MDBottomNavigationItem:
        name: "Screen 2"        
        icon: "images/bloco-de-anotacoes.png"
        on_tab_press:
          root.ids.title.text = "Alertas"
          app.populate_screen(self,"alerta")
        ScreenAlertaView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    

      MDBottomNavigationItem:
        name: "Screen 3"        
        icon: "images/informacoes.png"
        on_tab_press:
          root.ids.title.text = "Técnicas"
          app.populate_screen(self,"tecnica")
        ScreenTecnicaView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    

      MDBottomNavigationItem:      
        name: "Screen Home"        
        icon: "images/casa.png"
        on_tab_press:
          root.ids.title.text = "Home"          
        ScreenHomeView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)          

      MDBottomNavigationItem:
        name: "Screen 4"
        icon: "images/time-and-calendar.png"
        on_tab_press:
          root.ids.title.text = "Lembretes"
          app.populate_screen(self,"lembrete")
        ScreenLembreteView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    

      MDBottomNavigationItem:
        name: "Screen 5"
        icon: "images/time-and-calendar.png"
        on_tab_press:
          root.ids.title.text = "Anotações"
          app.populate_screen(self,"anotacao")
        ScreenAnotacaoView:          
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    