<ScreenMainView>
  name: "main"
  MDBoxLayout:
    orientation: "vertical"
    MDCard:      
      md_bg_color:"#67AB9F"    
      size_hint: 1, None
      size: "50dp", "50dp"     
      radius: 0,0,0,0       
      MDFloatLayout:        
            
        MDLabel:
          id: title
          text:"Home"
          halign: "center"        
          font_style: "H6"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"
        MDIconButton:
          icon: "images/icon-alert-love.png" 
          id:lembrete_alert          
          icon_size: "15sp"
          halign:"left"
          theme_icon_color: "Custom"
          icon_color: "red"
          on_release: 
            # app.open_notification()
            root.manager.transition.direction = "right"
            root.manager.current = "notificacao"
          pos_hint: {"center_x": 0.05, "center_y": 0.5}    
        MDLabel:
          id: count
          text:"[0] 00:00:00"
          halign: "right"          
          font_style:"Button"
          pos_hint: {"center_x": 0.5, "center_y": 0.5}
          theme_text_color: "Custom"
          bold:True
          text_color: "#004040"

        # MDIconButton:
        #   icon: "language-python"
        #   pos_hint: {"center_x": 0.98, "center_y": .5}
        #   on_release: 
        #     root.manager.transition.direction = "down"
        #     root.manager.current = "alerta"
    MDSeparator:
      color: "#004040"
      size_hint_y: None
      height: dp(2)     
    MDBottomNavigation:
      id: bottom_navigation
      panel_color:"#67AB9F"
      selected_color_background: 0, 0, 1, .4      

      MDBottomNavigationItem:
        name: "Screen 5"
        icon: "images/diario.png"
        text: "Anotações"        
        on_tab_press:
          root.ids.title.text = "Anotações"          
          app.populate_screen(self,"anotacao")
        ScreenAnotacaoView:          
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    

      MDBottomNavigationItem:
        name: "Screen 2"        
        icon: "images/alert.png"  
        text: "Alertas"       
        on_tab_press:
          root.ids.title.text = "Alertas"
          app.populate_screen(self,"alerta")

        ScreenAlertaView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    

      MDBottomNavigationItem:      
        name: "Screen Home"        
        icon: "images/home.png"
        text: "Home"
        on_tab_press:
          root.ids.title.text = "Home"          
        ScreenHomeView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)          

      MDBottomNavigationItem:
        name: "Screen 3"        
        icon: "images/book.png"
        text: "Técnicas"
        on_tab_press:
          root.ids.title.text = "Técnicas"
          app.populate_screen(self,"tecnica")
        ScreenTecnicaView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    


      MDBottomNavigationItem:
        name: "Screen 4"
        icon: "images/bell.png"
        text: "Lembretes"
        on_tab_press:
          root.ids.title.text = "Lembretes"
          app.populate_screen(self,"lembrete")
        ScreenLembreteView:
        MDSeparator:
          color: "#004040"
          size_hint_y: None
          height: dp(2)    