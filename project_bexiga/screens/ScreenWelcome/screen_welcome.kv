<ScreenWelcomeView>:
  md_bg_color: "#67AB9F"
  name: "screen_welcome"
  FloatLayout:    

    # Image:
    #   source: 'images/flower_background.png'
    #   size_hint: (None, None)
    #   size: "200dp", "200dp"
    #   pos_hint: {"center_x": 0.5, "center_y": 0.5}    

    MDLabel:
      text: "Olá, seja bem-vinda!"
      halign: "center"
      font_style: "H5"
      pos_hint: {"center_x": 0.5, "center_y": 0.8}
      theme_text_color: "Custom"
      bold:True
      text_color: "white"

    Image:        
      id:containte_ilustration
      source: "images/icone_welcome.png"
      size_hint: (0.5, 0.5)
      # size:"500dp", "500dp"# size_hint: None, None
      pos_hint: {"center_x": 0.5, "center_y": 0.6}


    MDLabel:
      text: "Este aplicativo foi desenvolvido para ajudar você, mulher, no seu processo de autocateterismo vesical. \n \n Ah! Os cuidadores também irão se beneficiar das diversas funcionalidades e informações aqui contidas. Então entre e saiba mais!"
      halign: "center"
      font_style: "Body2"
      pos_hint: {"center_x": 0.5, "center_y": 0.3}
      theme_text_color: "Custom"
      bold:True
      text_color: "white"
    
    MDLabel:
      text: "Versão 1.0.0"
      halign: "center"
      font_style: "Caption"
      pos_hint: {"center_x": 0.5, "center_y": 0.2}
      theme_text_color: "Custom"
      bold:True
      text_color: "white"

    MDRaisedButton:
      text: "Vamos lá!"
      text_color: "white"
      pos_hint: {"center_x": 0.5, "center_y": 0.1}
      font_style:"Button"
      theme_text_color: "Custom"
      md_bg_color:"#FF7AA8"
      text_color: "white"
      on_release:                      
        root.manager.transition.direction = "up"
        root.manager.current = "main"
        app.welcome()
